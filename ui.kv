Screen:
    MDBoxLayout:
        orientation: "vertical"
        padding: 20
        spacing: 20

        MDLabel:
            text: "Blind OCR Reader"
            font_style: "H5"
            halign: "center"

        MDRaisedButton:
            text: "Read Image"
            on_release: app.read_image()

        MDRaisedButton:
            text: "Read PDF"
            on_release: app.read_pdf()

        MDRaisedButton:
            text: "Save Audio"
            on_release: app.export_audio()

        MDRaisedButton:
            text: "Save as PDF"
            on_release: app.export_pdf()

        MDRaisedButton:
            text: "Save as DOCX"
            on_release: app.export_docx()

        MDRaisedButton:
            text: "Test Audio Export"
            on_release: app.test_audio()

        MDRaisedButton:
            text: "Speak Text"
            on_release: app.speak_text()

        MDRaisedButton:
            text: "Volume Settings"
            on_release: app.open_volume_settings()


# ============================================
#  POPUP FOR IMAGE OPTIONS
# ============================================
<ReadImagePopup@Popup>:
    size_hint: .5, .4
    title: "Choose Image Source"
    auto_dismiss: True

    MDBoxLayout:
        orientation: "vertical"
        spacing: 20
        padding: 20

        MDRaisedButton:
            text: "Capture Image"
            on_release:
                app.capture_image()
                root.dismiss()

        MDRaisedButton:
            text: "Import Image"
            on_release:
                app.import_image()
                root.dismiss()


# ============================================
#  VOLUME SETTINGS POPUP
# ============================================
<VolumePopup@Popup>:
    title: "Volume Settings"
    size_hint: 0.8, 0.4
    auto_dismiss: True

    MDBoxLayout:
        orientation: "vertical"
        spacing: 20
        padding: 20

        MDLabel:
            text: "Adjust Volume"
            halign: "center"
            font_style: "H6"

        MDSlider:
            id: volume_slider
            min: 0
            max: 100
            value: app.volume * 100
            on_value: app.set_volume(self.value / 100)

        MDRaisedButton:
            text: "Close"
            on_release: root.dismiss()
